extends layout

block content
    div.shortlist-container
        each trailer in trailers_found
            div.shortlisted-film-container(id=`id_${trailer.id}`)
                div.main-information-container(onclick="toggleOtherInfoVisibility(this)")
                    div.shortlisted-film-title
                        h2= trailer.titleUnencoded
                    if (trailer.rating === 1)
                        div.shortlisted-trailer-rating.rating--bronze
                            i.fas.fa-star.fa-2x.shortlist-star
                    else if (trailer.rating === 2)
                        div.shortlisted-trailer-rating.rating--silver
                            i.fas.fa-star.fa-2x.shortlist-star
                            i.fas.fa-star.fa-2x.shortlist-star
                    else
                        div.shortlisted-trailer-rating.rating--gold
                            i.fas.fa-star.fa-2x.shortlist-star
                            i.fas.fa-star.fa-2x.shortlist-star
                            i.fas.fa-star.fa-2x.shortlist-star
                div.other-information-container
                    div.shortlisted-trailer-image
                        img.shortlist-image(src=trailer.imageURL)
                    div.shortlisted-trailer-other-text
                        div.trailer-tags= trailer.tags
                        div.trailer-notes= trailer.notes
                        button(onClick=`deleteTrailerRatingAndNotes('${trailer.id}')`) Undo rating
                        button(onClick=`deleteTrailerAsFilmWatched('${trailer.id}')`) Watched


